    <div class="row justify-content-center align-items-center">
    
        <div class="edit col-12 col-md-8 justify-content-center mb-5">
        
            <h1>Edit Arcade</h1>
            <form action="/arcades/<%=arcade._id%>?_method=PUT" method="POST" novalidate class="validated-form" 
                enctype="multipart/form-data">
                
                <div class="field">
                    <label class="form-label" for="title">Arcade Title: </label>
                    <input class="form-control" id="title" type="text" name="arcade[title]" placeholder="arcade title" value="<%=arcade.title%>" required>
                </div>


                <div class="field">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" id="location" type="text" name="arcade[location]" placeholder="arcade location" value="<%= arcade.location %>" required>
                </div>
                
                <div class="field col-3">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group ">
                        <span class="input-group-text" id="money">$</span>
                        <input class="form-control" id="price" type="number" name="arcade[price]" aria-describedby="money" value="<%= arcade.price %>" required>
                    </div>
                    
                </div>


                <div class="field">
                    <label class="form-label" for="description">Discription:  </label>
                    <textarea class="form-control" id="description" name="arcade[description]" placeholder="" rows="5" required ><%=arcade.description %></textarea>
                </div>
                
                <div class="field">
                    <h3>Images:</h3>
                    <div class="mb-3">
                        <label for="image" class="form-label">Add more image(s)...</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                </div>


                <div class="imageFiles">
                    <% arcade.images.forEach(function (img, i) { %> 
                        <div class="ima image">
                            <label for="toggle<%=i%>">
                              <a class="delete">&#215</a>
                            </label>
                            <input class="checkbox" type="checkbox" id="toggle<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                           
                            <img class="ifile image" style="width: 128px; height: 128px;" src="<%=img.url%>" alt="">
                        </div>
                    <% }) %> 
                </div>
                
            <br>
          
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success mr-4">Update</button>
                <a href="/arcades/<%=arcade._id%>"><button type="button" class="btn btn-danger" style="margin-left: 0.5rem;">Cancel</button></a>
            </div>
            </form>
            
        
        </div>

    
    </div>