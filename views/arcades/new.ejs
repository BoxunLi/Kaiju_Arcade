    <div class="row">
        <div class="d-none d-sm-block col-1 col-lg-3"></div>
    
        <div class="edit col-12 col-sm-10 col-lg-6">
    
            <h1>Add An Arcade</h1>
            <form action="/arcades" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="field">
                    <label class="form-label" for="title">Arcade Title: </label>
                    <input class="form-control" id="title" type="text" name="arcade[title]" placeholder="arcade title" required>
                </div>


                <div class="field">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" id="location" type="text" name="arcade[location]" placeholder="arcade location" required>
                </div>
                
                <div class="field col-3">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group ">
                        <span class="input-group-text" id="money">$</span>
                        <input class="form-control" id="price" type="number" name="arcade[price]" aria-describedby="money" required>
                    </div>
                    
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Choose image(s)...</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>

                <!-- <input type="file" name="image" id="" multiple> -->
                <!-- <div class="field">
                    <label class="form-label" for="img">Image URL: </label>
                    <input class="form-control" id="img" type="text" name="arcade[img]" placeholder="" required>
                </div> -->

                <div class="field">
                    <label class="form-label" for="description">Discription:  </label>
                    <textarea class="form-control" id="description" name="arcade[description]" placeholder="" rows="5" required></textarea>
                </div>
                

                <div class="d-flex justify-content-end">
                    <button class="btn btn-success">Submit</button>
                    <a href="/arcades"><button type="button" class="btn btn-danger" style="margin-left: 0.5rem;">Cancel</button></a>
                </div>
            </form>

            
            
        </div>
        <div class="d-none d-sm-block col-1 col-lg-3"></div>
    </div>

    